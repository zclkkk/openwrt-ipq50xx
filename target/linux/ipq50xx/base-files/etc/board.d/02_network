#!/bin/sh

. /lib/functions/uci-defaults.sh

ipq50xx_setup_interfaces()
{
	local board="$1"
	case $board in
		redmi,ax3000)
			ucidef_add_switch "switch1" \
				"6u@eth1" "5u@eth0" \
				"1:lan:1" "2:lan:2" "3:lan:3" \
				"4:wan"
			;;
		xiaomi,cr881x)
			ucidef_add_switch "switch0" \
				"8u@eth1" "4u@eth0" \
				"0:lan:1" "1:lan:2" "2:lan:3" \
				"3:wan"
			;;
	esac
}

board_config_update
board=$(board_name)
ipq50xx_setup_interfaces $board
board_config_flush

exit 0
